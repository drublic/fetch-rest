{
  "compilerOptions": {
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "outDir": "build/",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "declaration": true
  },
  "include": ["src/**/*"]
}
